<ScrollView xmlns:android="http://schemas.android.com/apk/res/android" 
  android:layout_width="match_parent" 
  android:layout_height="match_parent"
  >

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="1800dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <TextView
        android:id="@+id/lblNbrOfRegistrations"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/strEmpty"
        android:textSize="18sp"
        android:textStyle="bold" 
        android:layout_centerHorizontal="true"
         />

    <TextView
        android:id="@+id/lblError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/strEmpty"
        android:textSize="14sp"
        android:textStyle="bold" 

        android:textColor="@color/opaque_red"/>

    <Button
       android:id="@+id/btnSynchronize"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="80dp"
       android:onClick="onButtonSynchronizeClicked"
       android:text="@string/str_Synchronize"
        android:background="@drawable/rounded_button"
        android:layout_below="@+id/lblNbrOfRegistrations"
        android:layout_toRightOf="@+id/lblError"
        android:layout_toEndOf="@+id/lblError" />


</RelativeLayout>

</ScrollView>
